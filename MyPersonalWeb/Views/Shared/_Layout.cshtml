@{
    (ModelsLibrary.Language language,object Models)=(ValueTuple<ModelsLibrary.Language,object>)Model;
    var languageMaster=(ModelsLibrary.Language.Master)language[nameof(ModelsLibrary.Language.Master)];
    var login=languageMaster.LoginArray;
    var headerConvenienceOptions=languageMaster.HeaderConvenienceOptionsArray.Value.EnumerateObject();
    var userProfileOptions=languageMaster.UserOptionsleftArray.Value.EnumerateObject();
}
<!DOCTYPE html>
<html lang="@languageMaster.CurrentLanguageCode">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <script>
            (function isIE() { //ie?
                if (window.ActiveXObject || "ActiveXObject" in window) {
                    alert('不支持IE浏览器，请更换其他浏览器。\n NOT SUPPORT IE !  PLEASE USE OTHER BROWSER.');
                    window.open("about:blank", "_self").close()
                }
            })()
        </script>
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="shortcut icon" href="~/src/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" href="~/css/large-screen.css" media="screen and (min-width: 769px)" />
        <link rel="stylesheet" href="~/css/small-screen.css" media="screen and (max-width: 768px)" />
        <script charset="utf-8" src="~/js/header-load.js"></script>
        <script charset="utf-8" src="~/js/operation-function.js"></script>
    </head>

    <body>
        <div onclick="whiteBack();" id="login-background">
        </div>
        <header>
            <div class="header-logo" onclick="backIndex()"><img src="~/src/img/logo.png" alt="LOGO"></div>
            <nav class="convenience-option">
                @foreach (var item in headerConvenienceOptions)
                {
                    <a href="/@ViewBag.lang@item.Value[1]">
                     @item.Value[0]
                     </a>
                }
            </nav>
            <div role="navigation" class="user-search-icon">
                <div>
                    <div class="search-option">
                        <form action="/@ViewBag.lang/section/searched" method="GET" name="search">
                            <input type="text" placeholder="search" name="searchtext">
                        </form>
                    </div>
                    <div class="search-icon">
                        <i onclick="search.submit();"></i></div>
                    <div class="menu-icon" onclick="showAndCloseMenu();">
                        <!-- <b>&#60;</b> -->
                    </div>
                    <div class="user-icon" onclick='@TempData["userprofile"]'><img width="35" src="~/src/img/logo1.png"
                            alt="user">
                    </div>
                </div>
            </div>
        </header>
        <div class="header-after">
            <div id="processbar"></div>
        </div>
        @if(ViewBag.logged)
        {
        <nav class="user-options" id="user-options">
            <ul>
                @foreach (var item in userProfileOptions)
                {
                    <li class="user-option">
                        <a href="/@ViewBag.lang@item.Value[1]"> 
                           @item.Value[0]
                        </a> 
                    </li>
                 }
            </ul>
        </nav>
        }
        <nav class="menu-options" id="menu-options">

            <div class="menu-option">
                @for (int i = 0; i < languageMaster.MenuArray.Count(); i++)
                {
                <div>
                    <h5>@languageMaster.MenuArray[i].Title</h5>
                    <a href="/@ViewBag.lang@languageMaster.MenuArray[i].Option1[1]">@languageMaster.MenuArray[i].Option1[0]</a>
                    <a href="/@ViewBag.lang@languageMaster.MenuArray[i].Option2[1]">@languageMaster.MenuArray[i].Option2[0]</a>
                    <a href="/@ViewBag.lang@languageMaster.MenuArray[i].Option3[1]">@languageMaster.MenuArray[i].Option3[0]</a>
                </div>
                }
                <div>
                    <img src="~/src/img/logo.png" width="120" alt="QRcode">
                    <a href="/profile/profile" onclick="showLogin();">@(ViewBag.UserName??languageMaster.MenuMyProfile)</a>
                </div>
            </div>
        </nav>
        <div class="wait" id="wait">
            <div class="move">
                <div class="bar">
                    <div class="dot1"></div>
                    <div class="dot2"></div>
                    <div class="dot3"></div>
                    <div class="dot4"></div>
                    <div class="dot5"></div>
                </div>
            </div>
        </div>
        <div class="login" id="login">
            <div><span class="login-close" onclick="loginClose();">✕</span></div>
            <h3 class="login-title">@login?.Title</h3>
            <form action="#" method="post" name="loginform" id="loginform">
                @* @Html.AntiForgeryToken() *@
                <div>
                    <p>@login?.UserName</p>
                    <input tabindex="1" type="text" tip="@login?.UserName" value="@ViewBag.username" name="username">
                    <p>@login?.Password <a href=""> @login?.Forget</a></p>
                    <input tabindex="2" type="password" tip="@login?.Password" value="@ViewBag.password" name="password">
                    <div id="loginerror" style="color: red;">&#160;</div>
                    <input tabindex="3" name="commit" type="submit" value="@login?.Signin" onclick="return signin()">
                    <input type="checkbox" name="isremembered" @ViewBag.isremembered id="isremembered"><label
                        for="isremembered">&#160;&nbsp;@login?.IsRemember</label>
                </div>
            </form>
            <div>
                <p>@login?.NewUser,<a href="">@login?.Create</a></p>
            </div>
        </div>
        <div class="conponent">
            @RenderBody()
        </div>
        <p>
            &nbsp;
        </p>

        <footer>
            <div class="footer-table">
                 @for (int i = 0; i < languageMaster.FooterArray.Count(); i++)
                {
                <div>
                    <h5>@languageMaster.FooterArray[i].Title</h5>
                    <a href="/@ViewBag.lang@languageMaster.FooterArray[i].Option1[1]">@languageMaster.FooterArray[i].Option1[0]</a>
                    <a href="/@ViewBag.lang@languageMaster.FooterArray[i].Option2[1]">@languageMaster.FooterArray[i].Option2[0]</a>
                    <a href="/@ViewBag.lang@languageMaster.FooterArray[i].Option3[1]">@languageMaster.FooterArray[i].Option3[0]</a>
                </div>
                }
                <div>
                    <img src="~/src/img/logo.png" width="120" alt="QRcode">
                    <a href="mailto:handsome___boy@outlook.com">@languageMaster.Contact</a>
                </div>
            </div>
            <div class="copyright">
                <p>©@DateTime.Now.ToString("yyyy") @languageMaster.FooterCopyright</p>
                <div class="langselect">
                    @languageMaster.language ：<span id="selected" onclick="showlang()">@languageMaster.CurrentLanguage</span><br>
                    <div name="lang" id="lang">
                        <option value="zh">@languageMaster.zh</option>
                        <option value="en">@languageMaster.en</option>
                    </div>
                </div>
                <p></p>
            </div>
        </footer>
        <script>
            var lang='@ViewBag.lang';
            var route= '@ViewBag.route';
        </script>
        <script src="~/js/footer-load.js"></script>

        @* @RenderSection("Advertisement", required: false) *@
        @* <iframe src="" frameborder="0" name="loginiframe" style="display: none;"></iframe> *@
    </body>

</html>
